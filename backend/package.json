    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/http-errors": "^2.0.1",
    "@types/node": "^20.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
